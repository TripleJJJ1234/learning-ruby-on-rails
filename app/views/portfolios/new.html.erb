<h1>Create a new Portfolio Item</h1>

<%= form_with(@portfolio_item) do |f| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_area :subtitle %>
  
  <div class="field">
      <%= f.label :body %>
      <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>